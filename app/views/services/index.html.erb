<div class="main-container">
  <h2>Browse services</h2>

  <!-- BROWSE RESULT FILTERS -->
  <div class="col">
    <!-- PATH FILTER CHIPS -->
    <div class="row">
      <a class="btn-filter" href="/services.15?query=citizenship&commit=Search>">Citizenship</a>
      <a class="btn-filter" href="/services.15?query=permanent+residency&commit=Search>">Permanent residency</a>
      <a class="btn-filter" href="/services.15?query=student+visa&commit=Search>">Student visa</a>
      <a class="btn-filter" href="/services.15?query=work+visa&commit=Search">Work visa</a>
    </div>
    <!-- SERVICE TYPE FILTER CHIPS -->
    <div class="row">
      <a class="btn-filter" href="/services.15?query=general+consultation&commit=Search>">General consultation</a>
      <a class="btn-filter" href="/services.15?query=ongoing+assistance&commit=Search>">Ongoing assistance</a>
      <a class="btn-filter" href="/services.15?query=test+prep&commit=Search>">Test preparation</a>
    </div>
  </div>

  <!-- BROWSE RESULT CARDS -->




  <div class="col">
    <% @services.each do |service| %>
      <div class="row">
        <div class="service-result-card">
         <div class="image" style="position: relative;">
          <i class="far fa-heart" style="font-size:24px; position: absolute; top: 20px; left: 16px; color: $black;"></i>
          <img src="<%= service.user.imgUrl %>">
         </div>

          <div class="info">
            <div class="row">
              <% if service.user.featured == true %>
                <p class="feature-badge">FEATURED</p>
              <% end %>
              <p class="path"><%= service.path %></p>
              <!-- TODO : ADD RATING TO SERVICE ON CARD -->
            </div>
            <div class="row">
              <h2><%= service.service_type.upcase %></h2>
            </div>
            <div class="row">
              <p><%= service.description %></p>
            </div>
            <div class="service-price">
              <p>$<%= service.price %> CAD/hour</p>
              <p><%= link_to 'See availability', service, class: "btn-availability" %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
