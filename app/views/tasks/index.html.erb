              <% end %>
            <% end %>
          </div>
          <!-- TASK NAME -->
          <div id="task-name">
          <p><strong><%= task.task_name%></strong></p>
          </div>
        </div>

        <!-- TASK ACTIONS -->
        <div class="task-actions">
          <!-- TASK PRIORITY -->
