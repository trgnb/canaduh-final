<%= form_for(@ride) do |f| %>
  <%= f.label "From" %>
  <%= f.text_field :departure_address %>

  <%= f.label "To" %>
  <%= f.text_field :destination_address %>

  <%= f.label "When" %>
  <%= f.text_field :ride_date, class: 'datepicker' %>

  <%= f.label "Price" %>
  <%= f.text_field :ride_price %>

  <%= f.label "Car capacity" %>
  <%= f.text_field :ride_capacity %>

  <%= f.submit "Add a new ride", class: "btn btn-primary"%>
<% end %>
