<div class="main-container">
    <h1>Welcome <strong><%= @first_name %></strong></h1>
    <div class="profile-card-image">
      <img src="<%= @user.imgUrl %>">
    </div>
    <div class="profile-info">
      <p><strong>First Name:</strong> <%= @first_name %></p></pre>
      <p><strong>Last Name:</strong> <%= @last_name %></p>
      <p><strong>Location:</strong> <%= @location%></p>
      <p><strong>Biography:</strong> <%= @bio %></p>
      <p><strong>Email:</strong> <%= @email%></p>
      <p><strong>User Path:</strong> <%= current_user.path_type%></p>

        <% if @user_type == "advisor" %>
          <h2>Advisor properties</h2>
          <p><strong>Specialty:</strong> <%= @specialty %></p>
        <% end %>

  <!-- // CONFIGURED ADVISOR SERVICES -->
  <div class="slice-container">
    <h2>Your active services</h2>
      <!-- <pre><%#= link_to "Add", "#" %></pre> -->
      <% @user.services.each do |service| %>
        <div class="dashboard-service-container">
          <h1><%= service.service_type.upcase %></h1>
          <h2><strong>Immigration path:</strong> <%= service.path %></h2>
          <p><strong>Description:</strong> <%= service.description %></p>
          <p><strong>Pricing:</strong> $<%= service.price %>/hour</p>
          <pre><%= link_to "Edit", "#" %> <%= link_to "Delete", "#", method: :delete %></pre>
        </div>
      <% end %>
  </div>



      <pre><%= link_to "Edit profile",  edit_user_registration_path %></pre>
      <pre><%= link_to "Add a service", "/services/new" %></pre>
    </div>
</div>
