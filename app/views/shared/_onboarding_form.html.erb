 <div class="onboarding-form" style="">
    <h1>Discover your path and connect today.</h1>
  <%= simple_form_for(:user, url: user_path(current_user), html: { method: :patch }) do |f| %>

    <div class="form-inputs">
      <!-- if statement needed to find out if user already set their path -->
      <h2><%= f.label "What brings you to Canaduh?" %></h2>
      <%= f.select :user_type, ['Client', 'Advisor'], {}, {class: "form-control"} %>
      <h2><%= f.label "What's your path?" %></h2>
      <%= f.select :path_type, ['Student Visa', 'Work Visa','Permanent Residency','Canadian Citizenship'], {}, {class: "form-control"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn-cta" %>
    </div>
  <% end %>
  </div>
