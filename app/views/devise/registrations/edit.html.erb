<div class="main-container">
  <div class="slice-container">
    <div class="form-edit-profile">
      <h3>Edit profile</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: false %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :first_name,
                  required: false,
                  autofocus: false,
                  input_html: { autocomplete: "first name" }%>

          <%= f.input :last_name,
                  required: false,
                  autofocus: false,
                  input_html: { autocomplete: "last name" }%>

          <%= f.input :username,
                  required: false,
                  autofocus: false,
                  input_html: { autocomplete: "User name" }%>

          <%= f.input :location,
                  required: false,
                  autofocus: false,
                  input_html: { autocomplete: "location" }%>

         <%= f.input :user_bio,
                  required: false,
                  autofocus: false,
                  input_html: { autocomplete: "Bio" }%>

          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>

          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>

          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <br>
        <div class="row-btn">
          <div class="form-btn"><%= f.button :submit, "Save", class: "btn-cta" %></div>
          <div class="form-btn"><%= link_to "Cancel", :back, class: "btn-cta-border" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
