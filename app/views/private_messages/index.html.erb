<ul>
<h1>Your Chat with <%= User.find(@conversation.receiver_id).first_name %></h1>
  <% @private_messages.each do |private_message| %>
    <% if private_message.body %>
      <li>
        <div class= "private_message-chatbox">
         <h4><%= private_message.user.first_name %></h4>
         <%= image_tag private_message.user.imgUrl, class: "avatar" %>
       </div>
        <p><%= private_message.body %></p>
      </li>
    <% end %>
  <% end %>
</ul>

<%= form_for [@conversation, @private_message] do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Your message" %>
  </div>

  <%= f.submit "Send" %>
<% end %>

<%= link_to "Back to Inbox", conversations_path %>
